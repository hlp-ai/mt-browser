{
  "manifest_version": 2,
  "name": "yimt-browser",
  "version": "1.0.8",
  "description": "translate html via yimt service",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "activeTab",
    "tabs",
    "<all_urls>",
    "scripting",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "yimt-browser",
    "default_popup": "popup/dic_popup.html"
  },
  "background": {
    "scripts": [
      "background-script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ]
}