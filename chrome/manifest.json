{
    "manifest_version": 3,
    "name": "yimt-browser",
    "version": "1.0.22",
    "description": "YiMT翻译插件",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_scripts.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_popup": "popup.html",
        "default_title": "yimt-browser"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "webRequest",
        "notifications"
    ]
}